<div class="form-group">
    <label class="control-label col-sm-3" for="option-<%= id %>">
        <%= option.name %>:
    </label>

    <div class="col-sm-9">
        <select class="form-control" data-option="<%= id %>">
            <% _.each(option.options, function(o) { %>
            <option value="<%= o.value %>" <%= o.value == value ? "selected" : "" %>>
                <%= o.text %>
            </option>
            <% }); %>
        </select>
    </div>
</div>